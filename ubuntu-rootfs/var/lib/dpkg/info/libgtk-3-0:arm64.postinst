#!/bin/sh
set -e

IMMODULES_DIR=/usr/lib/aarch64-linux-gnu/gtk-3.0/3.0.0/immodules
IMMODULES_DIR_OLD=/usr/lib/gtk-3.0/3.0.0/immodules

if [ "$1" = triggered ]; then
    # This is triggered everytime an application installs a
    # GTK immodule loader
    /usr/lib/aarch64-linux-gnu/libgtk-3-0/gtk-query-immodules-3.0 --update-cache || true
    exit 0
fi



# Also handle the initial installation
if [ -d $IMMODULES_DIR ] || [ -d $IMMODULES_DIR_OLD ]; then
     /usr/lib/aarch64-linux-gnu/libgtk-3-0/gtk-query-immodules-3.0 --update-cache || true
fi

